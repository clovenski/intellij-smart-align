<idea-plugin url="https://github.com/ttyniwa/intellij-smart-align">
    <id>com.github.ttyniwa.intellij.plugin.align</id>
    <name>Smart align</name>
    <vendor email="tty.niwa@gmail.com" url="https://github.com/ttyniwa">niwatty</vendor>

    <description><![CDATA[
    Align your code by assignment(=, +=, -=, *=, /=), colon(:) and comma(,). also support trailing comment.<br/>
    You don't have to select what to be aligned, this plugin automatically figure it out.

    <h2>How to use</h2>
    Place your cursor at where you want your code to be aligned, and invoke the Align command via Code -> 'Smart Align' or Press 'Alt + Shift + ='.<br/>
    Then the code will be automatically aligned.

    <h2>Screenshots</h2>
    <img src="https://raw.githubusercontent.com/ttyniwa/intellij-smart-align/master/demo.gif">
    ]]></description>

    <change-notes><![CDATA[
        <p>1.0</p>
        <ul>
            <li>Initial Release.</li>
            <li>Support assignment, colon, comma and trailing comment.</li>
        </ul>
        ]]>
    </change-notes>

    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="191"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
<!--        <projectConfigurable groupId="tools" displayName="Smart Align Plugin"-->
<!--                             id="preferences.SmartAlignConfigurable"-->
<!--                             instance="com.github.ttyniwa.intellij.plugin.align.settings.SmartAlignConfigurable"/>-->
<!--        <projectService id="pluginState"-->
<!--                        serviceImplementation="com.github.ttyniwa.intellij.plugin.align.settings.PluginConfig"/>-->
    </extensions>

    <actions>
        <action id="code.align" class="com.github.ttyniwa.intellij.plugin.align.CodeAlignerAction" text="Smart Align"
                description="Align your code">
            <add-to-group group-id="CodeFormatGroup" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="alt shift MINUS"/>
        </action>
    </actions>
</idea-plugin>